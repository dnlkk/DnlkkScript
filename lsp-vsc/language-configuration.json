{
    "comments": {
        "lineComment": "<--",
        "blockComment": [ "<--", "-->" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },
        { "open": "\"", "close": "\"" },
        { "open": "'", "close": "'" }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^.*\\{[^}\"']*$",
        "decreaseIndentPattern": "^\\s*\\}"
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*(?:function|if|else|for|while|switch|case|default|catch|finally)\\s*.*?\\s*$",
            "afterText": "^\\s*\\{\\s*$",
            "action": { "indentAction": "indent" }
        }
    ]
}